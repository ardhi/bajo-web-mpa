    class="col{% if not attr.columns|isEmpty %}{{ attr.columns|join(' col') }}{% else %}{% if attr.width or attr.sizing %}{% if attr.sizing %}-{{ attr.sizing }}{% endif %}{% if attr.width %}-{{ attr.width }}{% endif %}{% endif %}{% endif %}{{ attr.class }}"
